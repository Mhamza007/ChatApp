<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/receiver_chat_text"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/chat_receiver_layout"
        android:text="Receiver Messages here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/sender_chat_text"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="@+id/receiver_chat_text"
        android:background="@drawable/chat_sender_layout"
        android:text="Sender Messages here"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>